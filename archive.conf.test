# vim:set sw=2 ts=2 ft=sh et:

# Global
ARCHIVE_RSYNC='rsync://de3.mirror.archlinuxarm.org/archlinux-arm/'
ARCHIVE_DIR="$PWD/archive-root"
ARCHIVE_USER=$(id -u -n)
ARCHIVE_GROUP=$(id -g -n)
PKGEXT='.pkg.tar.xz'
PKGSIG="$PKGEXT.sig"
UMASK=022

# Repositories
ARCHIVE_REPO=1
REPO_DAYLY=1
REPO_PACKAGES=1
REPO_PACKAGES_INDEX=1
REPO_PACKAGES_FULL_SEARCH=0
REPO_RSYNC_TIMEOUT=10

# ISO
ARCHIVE_ISO=1
ISO_RSYNC_TIMEOUT=5
